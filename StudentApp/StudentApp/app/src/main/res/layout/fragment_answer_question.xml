<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".fragments.AnswerQuestionFragment">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/look_answer_button"
            android:layout_width="393dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:backgroundTint="#4E61C8"
            android:text="Посмотреть ответ"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_btn"
            android:layout_width="400dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:backgroundTint="#4E61C8"
            android:text="Применить выделение и продолжить"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            android:visibility="invisible"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="409dp"
            android:layout_height="730dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_number"
                android:layout_width="284dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/bottom_bar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/text_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4C3F63"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </ScrollView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/bottom_bar" />

            <TextView
                android:id="@+id/text_yes_no"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Пожалуйста, ознакомьтесь с вопросом темы, подумайте, как на него необходимо ответить, нажмите 'Посмотреть ответ' и сделайте вердикт."
                android:textColor="#6070C8"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/bottom_bar" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:background="#FFFFFF"
                android:fadeScrollbars="false"
                android:scrollbarSize="10dp"
                android:scrollbars="vertical">

                <TextView
                    android:id="@+id/text_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#4C3F63"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </ScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/speak_button"
                android:layout_width="400dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:backgroundTint="#4E61C8"
                android:text="Прослушать тему"
                android:textColor="@color/textbutton"
                android:textSize="15sp"
                android:visibility="invisible"
                app:cornerRadius="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no_answer_button"
                    android:layout_width="187dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="#EC5728"
                    android:text="Не знаю"
                    android:textColor="@color/textbutton"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/yes_answer_button"
                    android:layout_width="187dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#337E36"
                    android:text="Знаю"
                    android:textColor="@color/textbutton"
                    android:textSize="15sp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>