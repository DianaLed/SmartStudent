<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        android:orientation="vertical"
        tools:context=".fragments.game.CompareGameFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:elevation="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:text="Проверяем результаты"
                android:textColor="@color/textcolor"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:src="@drawable/exit" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:height="40dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:background="#C5D2FF"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:text="Вопрос" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#fff"
                    android:scrollbars="vertical"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="insideInset"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:height="40dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:background="#C5D2FF"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="Ответ" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#fff"
                    android:scrollbars="vertical"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="insideInset"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:height="45dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:background="#DCFFED"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="Выберите один или несколько правильных ответов" />

        <TextView
            android:id="@+id/answer_title_me"
            android:layout_width="match_parent"
            android:height="40dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:background="#C5F0FF"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="Ваш ответ" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/answer_me"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#fff"
                    android:elevation="10dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:text="TextView"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/answer_title_friend"
            android:layout_width="match_parent"
            android:height="40dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:background="#C5F0FF"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="Ответ друга" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/answer_friend"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#fff"
                    android:scrollbars="vertical"
                    android:scrollbarSize="10dp"
                    android:scrollbarStyle="insideInset"
                    android:layout_marginHorizontal="10dp"
                    android:elevation="10dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#6A7AD5"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Принять и продолжить"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp"
            />

    </LinearLayout>
</layout>