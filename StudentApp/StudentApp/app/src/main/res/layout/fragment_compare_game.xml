<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        android:orientation="vertical"
        tools:context=".fragments.game.CompareGameFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Проверяем результаты"
                android:textColor="@color/textcolor"
                android:textSize="26sp" />
            <ImageView
                android:id="@+id/check"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="25dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/del" />
        </LinearLayout>

        <EditText
            android:id="@+id/question"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#BCC2C6"
            android:gravity="clip_horizontal"
            android:hint="Вопрос"
            android:focusable="false"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/answer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#BCC2C6"
            android:gravity="clip_horizontal"
            android:hint="Ответ"
            android:focusable="false"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/answer_me"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#E0F2FF"
            android:gravity="clip_horizontal"
            android:hint="Ответ мой"
            android:focusable="false"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/answer_friend"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#E0F2FF"
            android:gravity="clip_horizontal"
            android:focusable="false"
            android:hint="Ответ друга"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:padding="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#6A7AD5"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Оба ответа верны"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp"
            />




    </LinearLayout>
</layout>