<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.StatisticFragment"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kolvop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:text="Количество вопросов:      \n"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/kolzap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:text="Колличество запомненых вопросов:  \n" />

            <TextView
                android:id="@+id/dateob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:text="Количество невыученных вопросов:  \n" />

            <TextView
                android:id="@+id/dateex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата экзамена:  \n"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/kold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Количество дней до экзамена:  \n"
                android:paddingBottom="20dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:textSize="19sp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#4E61C8"
            android:text="Редактировать план"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#4E61C8"
            android:text="Взаимодействие с Google календарём"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />
    </LinearLayout>

</layout>