<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_out"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#E0F2FF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Вы действительно хотите выйти \n из аккаунта?"
        />






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/out_acc"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:background="#FF837A"
        android:layout_margin="20dp"
        android:text="Выход"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_out" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_window"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:background="#60C4F1"
        android:layout_margin="20dp"
        android:text="Закрыть"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_out" />

</androidx.constraintlayout.widget.ConstraintLayout>