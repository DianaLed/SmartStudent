<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1F1F1"
        tools:context=".fragments.game.SettingGameFragment">

        <ImageView
            android:id="@+id/predm_null_png"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/game_settings"/>

        <TextView
            android:id="@+id/nameSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="#fff"
            android:elevation="10dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:text="Предмет"
            android:textColor="#606060"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:elevation="10dp"
            android:text="Параметры соревновательного\nрежима"
            android:textColor="#607CB5"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/questionCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="Колличество вопросов: 1"
            android:textColor="#606060"
            android:textSize="22sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:elevation="10dp"
            android:background="#FFFFFF"
            android:progress="0" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:textColor="#606060"
            android:elevation="10dp"
            android:background="#FFFFFF"
            android:text="Время на прохождение теста:"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <NumberPicker
                android:id="@+id/hoursPicker"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_height="match_parent"/>

            <NumberPicker
                android:id="@+id/minutesPicker"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Start"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#6A7AD5"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Продолжить"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp" />


</LinearLayout>


</layout>