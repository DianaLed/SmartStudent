<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_out"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#E0F2FF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Вы действительно хотите удалить \n данный предмет?"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E6746B"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:layout_marginLeft="20dp"
        android:text="Удалить" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#6A7AD5"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:layout_marginLeft="20dp"
        android:text="Отмена"
 />

    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF837A"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        />
</LinearLayout>