<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        android:orientation="vertical"
        tools:context=".fragments.AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="dsdsg"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textColor="@color/textcolor"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/section_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Профиль"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/section_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:text="Достижения"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:id="@+id/underline"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/normal_view_color" />

            <View
                android:id="@+id/underline3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/normal_view_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:backgroundTint="#6A7AD5"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:text="Изменить пароль"
                        android:textColor="@color/textbutton"
                        android:textSize="15sp"
                        app:cornerRadius="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                    <LinearLayout
                        android:id="@+id/lay_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:elevation="50dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/email" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="Электронная \nпочта"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="aaa@mail.ru" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/dateexams" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="Ближайший экзамен"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/next_exam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="31.12.2022" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/sizepredm" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="Количество предметов"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/count_exam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center"
                                android:text="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_dostiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Трофеи"
                                android:textSize="19sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:elevation="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_que_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/profile_que_no" />

                                    <ImageView
                                        android:id="@+id/prof_que_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/profile_que"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="5 выученных вопросов"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_friend_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/profile_friend_no" />

                                    <ImageView
                                        android:id="@+id/prof_friend_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/profile_friend"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Первый\nдруг"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_sub_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/profile_sub_no" />

                                    <ImageView
                                        android:id="@+id/prof_sub_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/profile_sub"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="1-й выученный предмет"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:layout_marginEnd="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_ex_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/profile_ex_no" />

                                    <ImageView
                                        android:id="@+id/prof_ex_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/profile_ex"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Первый\n экзамен"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_sorev"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="40dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sourcesanspro_semibold"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Трофеи соревновательного режима"
                                android:textSize="19sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:elevation="10dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_first_game_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/prof_first_game_no" />

                                    <ImageView
                                        android:id="@+id/prof_first_game_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/prof_first_game_yes"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Первая\nигра"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_game_completed_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/prof_first_game_completed_no" />

                                    <ImageView
                                        android:id="@+id/prof_game_completed_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/prof_first_game_completed"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Первая\nпобеда"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_que_all_game_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/prof_que_all_game_no" />

                                    <ImageView
                                        android:id="@+id/prof_que_all_game_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/prof_que_all_game_yes"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Чистая\nпобеда"
                                        android:textSize="16sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:layout_marginEnd="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/prof_game_wow_no"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/prof_game_wow_no" />

                                    <ImageView
                                        android:id="@+id/prof_game_wow_yes"
                                        android:layout_width="85dp"
                                        android:layout_height="85dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/prof_game_wow_yes"
                                        android:visibility="gone" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/sourcesanspro_semibold"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Победила\nдружба"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>
</layout>