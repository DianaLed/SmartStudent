<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#C9D1FF"
        android:elevation="1dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Результат оценивания"
            android:textColor="#3A3A3A"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:height="40dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:background="#C5D2FF"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"

        android:layout_marginVertical="2dp"
        android:layout_height="wrap_content"
        android:text="Вопрос / Тема" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:scrollbars="vertical"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideInset"
                android:layout_marginHorizontal="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:height="40dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:background="#C5D2FF"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:text="Правильный ответ" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:scrollbars="vertical"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideInset"
                android:layout_marginHorizontal="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/answer_title_host"
        android:layout_width="match_parent"
        android:height="40dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:background="#C5F0FF"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:text="Ваш ответ" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_answer_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="#fff"
                android:elevation="10dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/answer_title_friend"
        android:layout_width="match_parent"
        android:height="40dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:background="#C5F0FF"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:elevation="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:text="Ответ друга" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_answer_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:scrollbars="vertical"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="insideInset"
                android:layout_marginHorizontal="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#6A7AD5"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="Вернуться назад"
            android:textColor="@color/textbutton"
            android:textSize="15sp"
            app:cornerRadius="5dp" />

</LinearLayout>